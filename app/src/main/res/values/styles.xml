<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme.padding" parent="Base.Theme.AppCompat">
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="Base.Theme.AppCompat.Light">
        <item name="android:minWidth">@dimen/activity_horizontal_margin</item>
        <item name="android:padding">20dip</item>
        <item name="android:maxWidth">200dip</item>
        <item name="android:background">@color/primary</item>


    </style>

</resources>
